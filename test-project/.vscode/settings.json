{
  // Meteor/Blaze Language Server Configuration Examples
  // These settings override the defaults to show distinctly different styling

  // Basic language server settings
  "meteorLanguageServer.maxNumberOfProblems": 50,
  "meteorLanguageServer.trace.server": "messages",

  // Block condition decoration overrides - distinctly different from defaults

  "meteorLanguageServer.blockConditions": {
    "extend": [
      {
        "type": "mrkdwn",
        "label": "Custom Markdown Block",
        "propNames": ["text", "markdown", "content"]
      }
    ]
    // "margin": "0 0 0 1.5em",
    // "fontStyle": "italic",
    // "color": "#00FF00" // Bright green for visibility
  },

  "meteorLanguageServer.blazeHelpers": {
    "extend": [{ "name": "#mrkdwn", "doc": "Custom markdown block" }]
    // "hashColor": "#FF6B35",
    // "nameColor": "#007ACC",
    // "bracketColor": "#FF4500"
  },
  // Example VS Code theme token color customization for Blaze helpers
  // "editor.tokenColorCustomizations": {
  //   "textMateRules": [
  //     {
  //       "scope": "punctuation.definition.bracket.meteor",
  //       "settings": { "foreground": "#FFB300" }
  //     },
  //     {
  //       "scope": "constant.character.hash.meteor",
  //       "settings": { "foreground": "#FF6B35" }
  //     },
  //     {
  //       "scope": "entity.name.tag.meteor keyword.control.meteor",
  //       "settings": { "foreground": "#007ACC" }
  //     }
  //   ]
  // },
  // Additional VS Code settings for better development experience
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.associations": {
    "*.html": "html"
  },

  // Language-specific settings
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.suggest.insertMode": "replace"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  }
}
